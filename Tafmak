function renderProfile(){
  if(!cur)return;var s=ST[cur],p=s.profile;
  document.getElementById('profBox').innerHTML='<div class="prof-card"><h3>📍 פרטים כלליים</h3><div class="p-row"><span class="lb">שם תחנה</span><span class="vl">'+s.name+'</span></div><div class="p-row"><span class="lb">מרחב</span><span class="vl">'+s.area+'</span></div><div class="p-row"><span class="lb">כתובת</span><span class="vl">'+p.address+'</span></div><div class="p-row"><span class="lb">מפקד תחנה</span><span class="vl">'+p.commander+'</span></div></div><div class="prof-card"><h3>📞 טלפונים</h3><div class="p-row"><span class="lb">טלפון תחנה</span><span class="vl ph">'+p.phone+'</span></div><div class="p-row"><span class="lb">פקס</span><span class="vl ph">'+p.fax+'</span></div><div class="p-row"><span class="lb">קצין תורן</span><span class="vl ph">'+p.duty+'</span></div><div class="p-row"><span class="lb">מוקד משטרה</span><span class="vl ph">'+p.moked+'</span></div></div><div class="prof-card"><h3>🗺️ גבולות גזרה</h3>'+p.borders.map(function(b){return '<div class="b-tag">'+b+'</div>'}).join('')+'</div>';
}

function openPin(){document.getElementById('pinModal').classList.add('show');document.getElementById('pinIn').value='';setTimeout(function(){document.getElementById('pinIn').focus()},200)}
function closePin(){document.getElementById('pinModal').classList.remove('show')}
function checkPin(){var v=document.getElementById('pinIn').value;if(v==='1234'){closePin();toast('🔓 מצב עריכה פעיל')}else{var el=document.getElementById('pinIn');el.classList.add('error');setTimeout(function(){el.classList.remove('error')},500)}}

function toast(m){var t=document.getElementById('toast');t.textContent=m;t.classList.add('show');setTimeout(function(){t.classList.remove('show')},2500)}

try{var ss=localStorage.getItem('tf_s');if(ss&&ST[ss]){cur=ss;nav('s_menu')}}catch(e){}
