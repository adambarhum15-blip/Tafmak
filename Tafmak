var cur=null,checked={};
try{var s=localStorage.getItem('tf_c');if(s)checked=JSON.parse(s)}catch(e){}

function save(){try{localStorage.setItem('tf_c',JSON.stringify(checked))}catch(e){}}

function nav(id){
  document.querySelectorAll('.screen').forEach(function(s){s.classList.remove('active')});
  document.getElementById(id).classList.add('active');
  if(id==='s_menu')renderMenu();
  if(id==='s_tasks')renderTasks();
  if(id==='s_events')renderEvents();
  if(id==='s_profile')renderProfile();
  window.scrollTo(0,0);
}

function go(st){cur=st;try{localStorage.setItem('tf_s',st)}catch(e){}nav('s_menu')}

function renderMenu(){
  if(!cur)return;
  document.getElementById('hStation').textContent=ST[cur].name;
  var d=new Date();
  document.getElementById('hDate').textContent=d.toLocaleDateString('he-IL',{weekday:'long',year:'numeric',month:'long',day:'numeric'});
}

function renderTasks(){
  var box=document.getElementById('tList');box.innerHTML='';
  var total=0,done=0;
  var sections=Object.keys(TASKS);
  for(var s=0;s<sections.length;s++){
    var sec=sections[s],items=TASKS[sec];
    var div=document.createElement('div');div.className='checklist-section';
    div.innerHTML='<div class="sec-title">'+sec+'</div>';
    for(var i=0;i<items.length;i++){
      total++;var tk=items[i],ic=checked[tk.id];if(ic)done++;
      var el=document.createElement('div');
      el.className='cl-item'+(ic?' done':'');
      el.setAttribute('data-id',tk.id);
      el.onclick=(function(tid){return function(){toggleTask(tid)}})(tk.id);
      el.innerHTML='<div class="cbox">'+(ic?'✓':'')+'</div><div class="ctxt"><h4>'+tk.t+'</h4><p>'+tk.d+'</p></div>'+(ic?'<span class="ctime">'+checked[tk.id]+'</span>':'');
      div.appendChild(el);
    }
    box.appendChild(div);
  }
  var pct=total>0?Math.round((done/total)*100):0;
  document.getElementById('tCnt').textContent=done+'/'+total;
  document.getElementById('tPct').textContent=pct+'%';
  document.getElementById('tBar').style.width=pct+'%';
}

function toggleTask(id){
  if(checked[id])delete checked[id];
  else checked[id]=new Date().toLocaleTimeString('he-IL',{hour:'2-digit',minute:'2-digit'});
  save();renderTasks();
}

function resetTasks(){
  if(confirm('לאפס את כל המשימות?')){checked={};save();renderTasks();toast('המשימות אופסו')}
}

function renderEvents(){
  var box=document.getElementById('evList');box.innerHTML='';
  for(var i=0;i<EVENTS.length;i++){
    var ev=EVENTS[i];
    var el=document.createElement('div');el.className='ev-card';
    el.onclick=(function(e){return function(){showEvent(e)}})(ev);
    el.innerHTML='<div class="ev-head"><div class="ev-icon" style="background:'+ev.bg+'">'+ev.icon+'</div><h3>'+ev.title+'</h3></div><p>'+ev.desc+'</p>';
    box.appendChild(el);
  }
}

function showEvent(ev){
  document.getElementById('evTitle').textContent=ev.title;
  var box=document.getElementById('evContent');box.innerHTML='';
  if(ev.tp==='steps'){
    var h='<div class="step-list">';
    for(var i=0;i<ev.steps.length;i++){
      var st=ev.steps[i];
      h+='<div class="step" style="animation:slideUp .3s ease '+(i*0.04)+'s both"><div class="step-num">'+(i+1)+'</div><div class="step-c"><h4>'+st.t+'</h4><p>'+st.d+'</p></div></div>';
    }
    h+='</div>';box.innerHTML=h;
  }else if(ev.tp==='arrest'){box.innerHTML=htmlArrest();}
  else if(ev.tp==='bail'){box.innerHTML=htmlBail();}
  else if(ev.tp==='court'){box.innerHTML=htmlCourt();}
  nav('s_evdetail');
}

